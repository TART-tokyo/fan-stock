{
  "name": "iroiro",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "compile": "npx truffle compile",
    "console:local": "npx truffle console --network local",
    "console:live": "npx truffle console --network live",
    "solhint": "solhint ./contracts/**/*.sol",
    "lint": "yarn solhint",
    "coverage": "npx hardhat coverage",
    "migrate:local": "npx truffle migrate --reset --network local",
    "migrate:rinkeby": "npx truffle migrate --reset --network rinkeby",
    "migrate:kovan": "npx truffle migrate --reset --network kovan",
    "migrate:live": "npx truffle migrate --network live",
    "test": "npx hardhat test",
    "format": "yarn prettier --write .",
    "generate-types:web3": "typechain --target=web3-v1 'build/contracts/*.json' --outDir=../types/web3",
    "generate-types:ethers": "typechain --target=ethers-v5 'build/contracts/*.json' --outDir=../frontend/packages/react-app/src/types",
    "postinstall": "yarn compile && yarn generate-types:web3 && yarn generate-types:ethers"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@truffle/hdwallet-provider": "^1.2.2",
    "@typechain/ethers-v5": "^6.0.1",
    "@typechain/web3-v1": "^2.2.0",
    "chai": "^4.3.3",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.1.0",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.15",
    "truffle": "^5.2.2"
  },
  "dependencies": {
    "@iroiro/merkle-distributor": "1.2.12",
    "@openzeppelin/contracts": "^3.4.1",
    "hardhat-typechain": "^0.3.5",
    "ts-generator": "^0.1.1",
    "typechain": "^4.0.2"
  }
}
